<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:typeface">normal</item>
        <item name="android:background">#211f1f</item>
        <item name="android:textColor">#c94444</item>
        <item name="colorPrimary">#ffa3a3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="miTextView">
        <item name="android:textSize">7pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="miTextViewCalc">
    <item name="android:textSize">12pt</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="miBoton">
        <item name="android:textSize">5pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#123456</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="miBotonCalc">
        <item name="android:textSize">10pt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#123456</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="miBotonNum">
        <item name="android:textSize">10pt</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#123456</item>
        <item name="android:typeface">serif</item>
    </style>


</resources>
